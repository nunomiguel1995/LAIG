<?xml version="1.0" encoding="UTF-16" standalone="yes"?>

<dsx>
    <scene root="chair_scene" axis_length="15" background="0 0 0 1" drawmode="fill" shading="gouraud" cullface="none" cullorder="CCW" />

    <views default = "default">
        <perspective id="default" near="10" far="20" angle="45">
            <from x="0" y="0" z="0" />
            <to x="20" y="20" z="20" />
        </perspective>
    </views>

    <illumination doubleside="false" local="true"> 
        <ambient r="1" g="1" b="0" a="0" />
        <background r="0" g="1" b="1" a="0" />
    </illumination>

    <lights>
        <omni id="omni1" enabled="false" >
            <location x="1" y="1" z="1" w="0" />
            <ambient r="1" g="1" b="1" a="0" />
            <diffuse r="1" g="1" b="1" a="0" />
            <specular r="0" g="0" b="1" a="1" />
        </omni>
        <spot id="spot1" enabled="false" angle="45" exponent="2">
            <target x="5" y="5" z="5" />
            <location x="1" y="2" z="1" />
            <ambient r="0" g="1" b="0" a="0" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="0" />
        </spot>
    </lights>

    <textures>
        <texture id="blue" file="./res/blue.jpg" length_s="1" length_t="1" /> 
        <texture id="wood" file="./res/wood.jpeg" length_s="1" length_t="1" />
        <texture id="wall" file="./res/rugoso.jpeg" length_s="1" length_t="0.4" />       
    </textures>

        
    <materials>
        <material id="metalAppearance" >
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="204" g="204" b="204" a="1" />
            <diffuse r="180" g="180" b="180" a="1" />
            <specular r="25" g="25" b="25" a="1" />
            <shininess value="100" />
        </material> 
        <material id="woodAppearance">
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="76" g="76" b="76" a="1" />
            <diffuse r="204" g="204" b="204" a="1" />
            <specular r="25" g="25" b="25" a="1" /> 
            <shininess value= "2" /> 
        </material>
    </materials>

    <transformations>
        <transformation id="trans_chair">
           <translate x="3" y="0" z="1" />
           <rotate axis="y" angle="-90" />
        </transformation>
    </transformations>

	<primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" slices="10" stacks="10" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="2" y2="2" z2="2" x3="1" y3="5" z3="2" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="2" slices="50" stacks="2"/>
        </primitive>
        <primitive id="torus">
            <torus inner="10" outer="25" slices="10" loops="2"/>
        </primitive>
    </primitives>

    <components>
        <component id="chair_scene">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>

            <materials> 
                <material id="metalApperance" />
            </materials>

            <texture id="none" />

            <children>
               <componentref id="chair" />
               <componentref id="chair_cylinder"/>
            </children>
        </component>
        
        <component id="chair_cylinder">
            <transformation>
                <translate x="2.5" y="1.7" z="2" />
                <rotate axis="x" angle="-90" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>

            <materials> 
                <material id="metalApperance" />
            </materials>

            <texture id="blue" />

            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="square">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="top_square" />
                <componentref id="bottom_square"/>
                <componentref id="left_square" />
                <componentref id="right_square" />
                <componentref id="front_square" />
                <componentref id="back_square" />   
            </children>           
        </component> 

        <component id="top_square">
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="rectangle"/>
            </children>           
        </component>
        
        <component id="bottom_square">
            <transformation>
                <rotate axis="x" angle="90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="rectangle"/>
            </children>           
        </component>

        <component id="left_square">
            <transformation>
                <rotate axis="y" angle="90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="rectangle"/>
            </children>           
        </component>

        <component id="right_square">
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="rectangle"/>
            </children>           
        </component> 

        <component id="front_square">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="rectangle"/>
            </children>           
        </component> 

        <component id="back_square">
            <transformation>
                <rotate axis="x" angle="180" />
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="rectangle"/>
            </children>           
        </component>
        
        <component id="chair">
            <transformation>
                <transformationref id="trans_chair" />
            </transformation>

            <materials>
                <material id="metalApperance" />
                <material id="woodApperance" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="front_right_leg" />
                <componentref id="front_left_leg" />
                <componentref id="back_right_leg" />
                <componentref id="back_left_leg" />
                <componentref id="seat" />
                <componentref id="backrest" />
            </children>
        </component>

        <component id="front_right_leg">
            <transformation>
                <translate x="1.5" y="0" z="1.5" />
                <scale x="0.1" y="0.8" z="0.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="blue" />

            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="front_left_leg">
            <transformation>
                <translate x="0" y="0" z="1.5" />
                <scale x="0.1" y="0.8" z="0.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="blue" />

            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="back_right_leg">
            <transformation>
                <translate x="1.5" y="0" z="0" />
                <scale x="0.1" y="0.8" z="0.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="blue" />

            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="back_left_leg">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="0.1" y="0.8" z="0.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="blue" />

            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="seat">
            <transformation>
                <translate x="0.85" y="1.5" z="0.75" />
                <scale x="2" y="0.2" z="2" />
            </transformation>
            
            <materials>
                <material id="woodApperance" />
            </materials>

            <texture id="wood" />

            <children>
                <componentref id="square" />
            </children>
        </component>

        <component id="backrest">
            <transformation>
                <translate x="-0.1" y="2.4" z="0.75" />
                <scale x="0.2" y="2" z="2" />
            </transformation>
            
            <materials>
                <material id="woodApperance" />
            </materials>

            <texture id="wood" />

            <children>
                <componentref id="square" />
            </children>
        </component>        
    </components>
    
</dsx>